extend ./modules/layout.pug

block append head
	- var needreset = true
	- var nav_darkbg = true
	title JSDungeon | JS地下城 | 003 | 計算機 | Calculator
	link(rel="stylesheet" href="assets/style/pageStyle/style003.css")

block content
	.fix-height.vh-100
	.wrap
		.title.clearfix
			h3#current_formula
			h2#current_answer
		ul.btnsWrap
			li.btn(data-action="7") 7
			li.btn(data-action="8") 8
			li.btn(data-action="9") 9
			li.btn.l-bgcolor-pri(data-action="division") ÷
			li.btn(data-action="4") 4
			li.btn(data-action="5") 5
			li.btn(data-action="6") 6
			li.btn.l-bgcolor-pri(data-action="times") ×
			li.btn(data-action="1") 1
			li.btn(data-action="2") 2
			li.btn(data-action="3") 3
			li.btn.l-bgcolor-pri(data-action="plus") +
			li.btn(data-action="0") 0
			li.btn(data-action="d-0") 00
			li.btn(data-action="point") .
			li.btn.l-bgcolor-pri(data-action="minus") −
			li.btn.l-color-pri(data-action="ac") AC
			li.btn.l-color-pri(data-action="delete")
				i.fas.fa-backspace(data-action="delete")
				span.l-fz0.clearfix(data-action="delete") delete
			li.btn.l-btn--w2(data-action="equal") =

block footer
	include ./modules/footer
	script(src='assets/js/js003.js')